{% from "now-prototype-it-design-system/components/label.njk" import nowPrototypeItLabel %}

{% macro nowPrototypeItTextInput(params) %}
  <div class="nowprototypeit-form-item-wrapper {{ params.classes }}">
    {{ nowPrototypeItLabel({
      for: params.nameAndId,
      text: params.label,
      hintText: params.hintText,
      classes: params.labelClasses
    }) }}
    <input class="nowprototypeit-form-text-input {{ params.additionalClasses }}" type="text" value="{{ params.value }}" name="{{ params.nameAndId }}"
           data-dom-widget="add-class-on-value-change" data-changed-value-class="nowprototypeit-form-text-input-changed"
           id="{{ params.nameAndId }}"/>
  </div>
{% endmacro %}
