{% from "now-prototype-it-design-system/components/nav.njk" import nowPrototypeItNav %}

{% macro nowPrototypeItHeader(config) %}
  <header class="nowprototypeit-header">
    <h3 class="nowprototypeit-brand-header {% if config.subText %}nowprototypeit-brand-header--with-sub-text{% endif %}"><a href="{{ config.logoLink }}"><img
            src="{{ config.nowPrototypeItDesignSystemAssetsPath }}/images/logo.png" alt="Now Prototype It"/></a>
    {% if config.subText %}
      <span class="nowprototypeit-brand-sub-text">{{ config.subText }}</span>
    {% endif %}
    </h3>
    {% if config.mainNavItems %}
      {{ nowPrototypeItNav({
        items: config.mainNavItems,
        listClasses: "nowprototypeit-header-main-nav",
        itemClasses: "nowprototypeit-header-main-nav-item"
      }) }}
    {% endif %}
  </header>
{% endmacro %}